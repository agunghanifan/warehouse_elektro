<%- include('../partials/head') %>
<%- include('../partials/navbar') %>
    
<form action="/products/edit/<%= data.id %>" method="POST">
    <div class="form-group">
      <label for="name">Product Name</label>
      <input type="text" class="form-control" name="name" value="<%= data.name %>">
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <input type="text" class="form-control" name="description" value="<%= data.description %>">
    </div>
    <div class="form-group">
        <label for="stock">Stock/label>
        <input type="text" class="form-control" name="stock" value="<%= data.stock %>">
      </div>
      <div class="form-group">
        <label for="price">price</label>
        <input type="text" class="form-control" name="price" value="<%= data.price %>">
      </div>
      <div class="form-group">
        <label for="brandId">Brand</label>
        <input type="text" class="form-control" name="brandId" value="<%= data.Brand.id %>">
      </div>
      <div class="form-group">
        <label for="categoryId">Category</label>
        <input type="text" class="form-control" name="categoryId" value="<%= data.Category.id %>">
      </div>
    <button type="submit" class="btn btn-primary">edit</button>
  </form>

</body>
</html>